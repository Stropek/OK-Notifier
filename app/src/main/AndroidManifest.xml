<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.przemolab.oknotifier">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".NotifierApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/ongoing_contests">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ContestActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity" />

        <activity
            android:name=".activities.SettingsActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.MainActivity" />

        <provider
            android:name=".data.NotifierDataProvider"
            android:authorities="com.przemolab.oknotifier"
            android:exported="false" />

        <service
            android:name=".services.OpenKattisJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

    </application>

</manifest>